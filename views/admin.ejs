<%- include('./layouts/head.ejs') %>

    <body>
        <div class="wrapper">
            <%- include('./layouts/nav-admin.ejs') %>
                <div class="main-panel p-4">
                    <table class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr>
                                <th>STT</th>
                                <th>Tên và email</th>
                                <th>Username</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((e, index)=>{ %>
                                <tr>
                                    <td>
                                        <p class="fw-normal mb-1">
                                            <%= (index + 1) %>
                                        </p>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="ms-3">
                                                <p class="fw-bold mb-1">
                                                    <%= e.fullname %>
                                                </p>
                                                <p class="text-muted mb-0">
                                                    <%= e.email %>
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fw-normal mb-1">
                                            <%= e.username %>
                                        </p>
                                    </td>
                                    <td>
                                        <% if(e.inconstant_login===0) { %>
                                            <% if(e.status===0) { %>
                                                <span class="badge badge-primary rounded-pill d-inline">Chưa xác
                                                    minh</span>
                                                <% }else if(e.status===1){ %>
                                                    <span class="badge badge-success rounded-pill d-inline">Đã xác
                                                        minh</span>
                                                    <% }else if(e.status===2){ %>
                                                        <span class="badge badge-warning rounded-pill d-inline">Đang cập
                                                            nhật</span>
                                                        <% }else if(e.status===3){ %>
                                                            <span class="badge badge-warning rounded-pill d-inline">Đang
                                                                khóa</span>
                                                            <% } %>
                                                                <%} else{ %>
                                                                    <span
                                                                        class="badge badge-danger rounded-pill d-inline">Khóa
                                                                        vô thời hạn</span>
                                                                    <% } %>
                                    </td>
                                </tr>
                                <% })%>
                        </tbody>
                    </table>
                </div>
        </div>
    </body>

    </html>