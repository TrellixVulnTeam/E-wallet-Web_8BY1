<%- include('./layouts/head.ejs') %>

    <body>
        <div class="wrapper">
            <%- include('./layouts/nav-admin.ejs') %>
                <div class="main-panel p-4">
                    <h2 class="text-center">Phê duyệt giao dịch</h2>
                    <table class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr>
                                <th>THỨ TỰ</th>
                                <th>MÃ GIAO DỊCH</th>
                                <th>TÀI KHOẢN GIAO DỊCH</th>
                                <th>TIỀN GIAO DỊCH</th>
                                <th>LOẠI GIAO DỊCH</th>
                                <th>TRẠNG THÁI</th>
                                <th>NGÀY GIAO DỊCH</th>
                                <th>THAO TÁC</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transaction.forEach(function(h,index) { %>
                                <tr>
                                    <td>
                                        <%= (index + 1) %>
                                    </td>
                                    <td>
                                        <%= h._id %>
                                    </td>
                                    <td>
                                        <%= h.username %>
                                    </td>
                                    <td>
                                        <%= h.money.toLocaleString("en-US") %>
                                    </td>
                                    <!-- kind-chuyển tiền: 0, nạp tiền: 1, rút tiền: 2, mua thẻ: 3 -->
                                    <td>
                                        <% if(h.kind === 1) { %>
                                            <span class="badge badge-primary rounded-pill d-inline ">Chuyển tiền</span>
                                            <% }else if(h.kind === 2){ %>
                                                <span class="badge badge-danger rounded-pill d-inline ">Rút tiền</span>
                                                <% } %>
                                    </td>
                                    <!-- 0:duyệt, 1:chờ duyệt, 2:từ chối -->
                                    <td>
                                        <% if(h.status_transaction === 1){ %>
                                            <span class="badge badge-warning rounded-pill d-inline ">Chờ duyệt</span>
                                            <% } %>
                                    </td>
                                    <td>
                                        <%=h.time.toLocaleString('vi-VN', { hour12: true })%>
                                    </td>
                                    <td>
                                        <a href="/admin/acceptTransaction/<%=h._id %>" type="button" class="btn-primary btn-sm btn-rounded"> Xem chi tiết</a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
        </div>
    </body>

    </html>