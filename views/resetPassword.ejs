<%- include('./layouts/head.ejs') %>

    <body class="gradient-custom-2">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex align-items-center justify-content-center h-100">
                    <div class="col-md-8 col-lg-7 col-xl-6">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
                    </div>
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        <form action="/resetPassword" method="post">
                            <!-- Confirm password 1 input -->
                            <div class="form-group mb-4">
                                <label class="form-label" for="email">Nhập email:</label>
                                <input type="email" name="email" id="email" class="form-control form-control-lg" />
                                
                            </div>

                            <!-- Confirm password 2 input -->
                            <div class="form-group mb-4">
                                <label class="form-label" for="phone">Nhập số điện thoại:</label>
                                <input type="text" name="phone" id="phone" class="form-control form-control-lg" />
                                
                            </div>
                            <% if(error){ %>
                                <div class="alert alert-danger mb-3">
                                    <strong>Lưu ý!</strong>
                                    <%= error %>
                                </div>
                                <%}%>
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-primary btn-lg gradient-custom">Xác nhận</button>
                                    <a href="/" class="btn btn-primary btn-lg  gradient-custom">Hủy</a>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </body>

    </html>
    <script>
        createAutoClosingAlert(".alert-danger", 2000);
    </script>